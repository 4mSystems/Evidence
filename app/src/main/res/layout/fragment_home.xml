<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="grand.app.moon.views.fragments.SplashFragment">

    <data>

        <variable
            name="viewmodel"
            type="grand.app.akar.pages.home.viewModels.HomeViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:onClick="@{()-> viewmodel.filpCard()}">

        <FrameLayout
            android:id="@+id/card_map"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include layout="@layout/home_map_layout" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/card_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <include layout="@layout/home_list_layout" />
        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>