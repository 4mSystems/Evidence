<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                  
                                                               

    

                                           

                 
                            
                                                                                     
           

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:tag="layout/fragment_client_profile_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" tools:context="te.app.moon.views.fragments.SplashFragment">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:fitsSystemWindows="true">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/toolbar_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                app:contentScrim="?attr/colorPrimary"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:toolbarId="@+id/toolbar">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <te.app.evidence.customViews.views.CustomTextViewMedium
                        android:id="@+id/client_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp8w"
                        android:layout_marginTop="@dimen/dp10h"
                        android:text="@string/client_data"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/colorPrimaryDark"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/client_data_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp8w"
                        android:layout_marginTop="@dimen/dp8h"
                        android:layout_marginEnd="@dimen/dp8w"
                        app:cardCornerRadius="@dimen/dp8h"
                        app:cardElevation="6dp"
                        app:cardUseCompatPadding="true"
                        app:layout_constraintTop_toBottomOf="@id/client_data">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp15h">

                            <te.app.evidence.customViews.views.CustomTextViewRegular
                                android:id="@+id/client_name_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp25w"
                                android:layout_marginEnd="@dimen/dp4w"
                                android:text="@string/client_name"
                                android:textAlignment="viewStart"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                android:textColor="@color/colorPrimary"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <te.app.evidence.customViews.views.CustomTextViewRegular
                                android:id="@+id/client_name_value"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp10w"
                                android:layout_marginEnd="@dimen/dp20w"
                                android:tag="binding_1"                       
                                android:textAlignment="center"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                android:textColor="@color/header_data_table"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@id/client_type_text"
                                app:layout_constraintTop_toTopOf="parent" />

                            <View
                                android:id="@+id/v6"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="@dimen/dp12h"
                                android:background="@color/line_color"
                                app:layout_constraintTop_toBottomOf="@id/client_name_value" />

                            <te.app.evidence.customViews.views.CustomTextViewRegular
                                android:id="@+id/unit_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp25w"
                                android:layout_marginTop="@dimen/dp12h"
                                android:layout_marginEnd="@dimen/dp4w"
                                android:text="@string/client_unit"
                                android:textAlignment="viewStart"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                android:textColor="@color/colorPrimary"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/v6" />

                            <te.app.evidence.customViews.views.CustomTextViewRegular
                                android:id="@+id/unit_value"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp10w"
                                android:layout_marginEnd="@dimen/dp20w"
                                android:tag="binding_2"                       
                                android:textAlignment="center"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                android:textColor="@color/header_data_table"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@id/client_type_text"
                                app:layout_constraintTop_toTopOf="@id/unit_text" />

                            <View
                                android:id="@+id/v2"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="@dimen/dp12h"
                                android:background="@color/line_color"
                                app:layout_constraintTop_toBottomOf="@id/unit_value" />

                            <te.app.evidence.customViews.views.CustomTextViewRegular
                                android:id="@+id/client_type_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp25w"
                                android:layout_marginTop="@dimen/dp12h"
                                android:layout_marginEnd="@dimen/dp5w"
                                android:text="@string/user_type"
                                android:textAlignment="viewStart"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                android:textColor="@color/colorPrimary"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/v2" />

                            <te.app.evidence.customViews.views.CustomTextViewRegular
                                android:id="@+id/client_type_value"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp10w"
                                android:layout_marginEnd="@dimen/dp20w"
                                android:tag="binding_3"                 
                                android:textAlignment="center"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                android:textColor="@color/header_data_table"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@id/client_type_text"
                                app:layout_constraintTop_toTopOf="@id/client_type_text" />

                            <View
                                android:id="@+id/v5"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="@dimen/dp8h"
                                android:background="@color/line_color"
                                app:layout_constraintTop_toBottomOf="@id/client_type_text" />


                            <te.app.evidence.customViews.views.CustomTextViewRegular
                                android:id="@+id/client_address_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp25w"
                                android:layout_marginTop="@dimen/dp12h"
                                android:layout_marginEnd="@dimen/dp5w"
                                android:text="@string/client_address"
                                android:textAlignment="viewStart"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                android:textColor="@color/colorPrimary"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/v5" />

                            <te.app.evidence.customViews.views.CustomTextViewRegular
                                android:id="@+id/client_address_value"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp10w"
                                android:layout_marginEnd="@dimen/dp20w"
                                android:tag="binding_4"                          
                                android:textAlignment="center"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                android:textColor="@color/header_data_table"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@id/client_type_text"
                                app:layout_constraintTop_toTopOf="@id/client_address_text" />

                            <View
                                android:id="@+id/v3"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="@dimen/dp12h"
                                android:background="@color/line_color"
                                app:layout_constraintTop_toBottomOf="@id/client_address_value" />

                            <te.app.evidence.customViews.views.CustomTextViewRegular
                                android:id="@+id/client_note_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp25w"
                                android:layout_marginTop="@dimen/dp12h"
                                android:layout_marginEnd="@dimen/dp5w"
                                android:text="@string/client_note"
                                android:textAlignment="viewStart"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                android:textColor="@color/colorPrimary"
                                app:layout_constraintEnd_toStartOf="@id/client_note_value"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/v3" />

                            <te.app.evidence.customViews.views.CustomTextViewRegular
                                android:id="@+id/client_note_value"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp10w"
                                android:layout_marginEnd="@dimen/dp20w"
                                android:tag="binding_5"                  
                                android:textAlignment="center"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                android:textColor="@color/header_data_table"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@id/client_type_text"
                                app:layout_constraintTop_toTopOf="@id/client_note_text" />

                            <View
                                android:id="@+id/v4"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="@dimen/dp12h"
                                android:background="@color/line_color"
                                app:layout_constraintTop_toBottomOf="@id/client_note_value" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.cardview.widget.CardView>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="?attr/actionBarSize"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/client_notes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp6w"
                android:layout_marginTop="@dimen/dp12h"
                android:tag="binding_6"                                                                                                      
                                                          
                android:text="@string/client_notes"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/white"
                app:layout_constraintEnd_toStartOf="@+id/client_cases"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/client_cases"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp6w"
                android:layout_marginTop="@dimen/dp12h"
                android:layout_marginEnd="@dimen/dp8w"
                android:tag="binding_7"                                                                                                      
                                                          
                android:text="@string/menuCases"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/client_notes"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/br4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:barrierDirection="bottom"
                app:constraint_referenced_ids="client_cases,client_notes" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/input_search"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp14w"
                android:layout_marginTop="@dimen/dp15h"
                android:layout_marginEnd="@dimen/dp14w"
                android:background="@drawable/corner_view_primary_gray"
                android:hint="@string/client_search_hint"
                android:inputType="text"
                android:padding="@dimen/dp8h"
                android:textAlignment="viewStart"
                android:textColorHint="@color/medium_color"
                android:visibility="gone"
                app:helperTextTextColor="@color/black"
                app:hintTextAppearance="@style/TextAppearance.AppCompat.Small"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/br4"
                app:startIconDrawable="@drawable/ic_search" />

            <ProgressBar
                android:id="@+id/progress_bar_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp15h"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/input_search" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rc_client_notes"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/dp18h"
                android:tag="binding_8"                
                android:visibility="gone"                                                           
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintBottom_toTopOf="@id/progress"
                app:layout_constraintTop_toBottomOf="@+id/progress_bar_home"
                                        
                                 
                tools:listitem="@layout/item_note" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rc_client_cases"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/dp18h"
                android:visibility="gone"                                                           
                android:tag="binding_9"                      
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintBottom_toTopOf="@id/progress"
                app:layout_constraintTop_toBottomOf="@+id/progress_bar_home"
                                        
                                 
                tools:listitem="@layout/item_case" />

            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:id="@+id/progress"
                style="Widget.MaterialComponents.LinearProgressIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp4h"
                android:indeterminate="true"
                android:visibility="gone"                                                                  
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:trackColor="@color/white"
                app:trackThickness="@dimen/dp4h"  android:tag="binding_10"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/dp16h"
            android:contentDescription="@string/app_name"
            android:tag="binding_11"                       
            android:visibility="gone"                                                           
            app:backgroundTint="@color/colorPrimary"
            app:layout_behavior="com.google.android.material.behavior.HideBottomViewOnScrollBehavior"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:rippleColor="@color/header_data_table"
            app:srcCompat="@drawable/ic_note_add"
            app:tint="@color/white" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
         