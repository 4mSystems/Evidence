    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:tag="layout/item_ad_images_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/image1"
            android:layout_width="@dimen/dp100w"
            android:layout_height="@dimen/dp110h"
            android:layout_marginStart="@dimen/dp7w"
            android:layout_marginTop="@dimen/dp16h"
            android:layout_marginEnd="@dimen/dp7w"
            android:tag="binding_1"                             
            android:src="@drawable/holo"
                                                            
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:riv_corner_radius="@dimen/dp6h" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/close1"
            android:layout_width="@dimen/dp20w"
            android:layout_height="@dimen/dp20h"
            android:layout_margin="@dimen/dp8h"
            android:tag="binding_2"                              
            android:src="@mipmap/ic_close"
            android:visibility="gone"                                                         
            app:layout_constraintStart_toStartOf="@id/image1"
            app:layout_constraintTop_toTopOf="@id/image1" />

    </androidx.constraintlayout.widget.ConstraintLayout>
         