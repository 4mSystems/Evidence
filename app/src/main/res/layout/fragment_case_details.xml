                    app:pcv_mode="ring"
                    app:pcv_orientation="clockwise"
                    app:pcv_startAngle="270"
                    app:pcv_textColor="@color/colorPrimary"
                    app:pcv_textSize="@dimen/sp1" />
            </androidx.constraintlayout.widget.ConstraintLayout>

