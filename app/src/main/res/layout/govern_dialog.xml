<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewmodel"
            type="te.app.evidence.pages.places.viewModels.PlacesViewModel" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp10h"
        app:cardCornerRadius="@dimen/dp12h">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/search_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp8h"
                android:drawableEnd="@drawable/ic_search"
                android:drawablePadding="@dimen/dp8w"
                android:gravity="center_vertical"
                android:hint="@string/search_govern"
                android:padding="@dimen/dp8h"
                android:onTextChanged="@{viewmodel.onTextChanged}"
                android:textColorHint="@color/medium_color"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp250h"
                android:layout_margin="@dimen/dp8h"
                app:adapter="@{viewmodel.governAdapter}"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toBottomOf="@id/search_input"
                app:orientation="@{`1`}"
                app:span="@{`1`}"
                tools:listitem="@layout/item_govern" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>