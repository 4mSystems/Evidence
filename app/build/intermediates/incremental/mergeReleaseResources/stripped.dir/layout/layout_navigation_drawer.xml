<?xml version="1.0" encoding="utf-8"?>

                                                        

    

                                                         

                                           

                 
                                
                                                                    
           

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical" android:tag="layout/layout_navigation_drawer_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">


        <androidx.drawerlayout.widget.DrawerLayout
            android:id="@+id/dl_main_navigation_menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:id="@+id/rl_navigation_drawer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_base_action_bar_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                </LinearLayout>


                <FrameLayout
                    android:id="@+id/fl_home_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/ll_base_action_bar_container">

                </FrameLayout>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_navigation_drawer_header"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:background="@drawable/corner_view_gradient"
                android:orientation="vertical">


                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rl_navigation_drawer_logo"
                        android:orientation="vertical">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/vv_navigation_drawer_image"
                            android:layout_width="@dimen/dp60h"
                            android:layout_height="@dimen/dp60h"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/dp25h"
                            android:tag="binding_1"                                                
                            android:src="@drawable/logo"
                            app:civ_border_color="@color/white"
                            app:civ_border_width="4dp"
                                                                                          />

                        <te.app.evidence.customViews.views.CustomTextViewMedium
                            android:id="@+id/tv_user_login"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/dp8h"
                            android:tag="binding_2"                                                
                                                                                  
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="@color/white" />

                        <com.google.android.material.button.MaterialButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/dp8h"
                            android:tag="binding_3"                                               
                                                                                                                         
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="@color/colorPrimaryDark"
                            app:backgroundTint="@color/white"
                            app:cornerRadius="@dimen/dp6h" />

                        <te.app.evidence.customViews.views.CustomTextViewMedium
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp12w"
                            android:layout_marginTop="@dimen/dp25h"
                            android:drawableStart="@drawable/ic_home"
                            android:drawablePadding="@dimen/dp6w"
                            android:gravity="center"
                            android:tag="binding_4"                                             
                            android:text="@string/menuHome"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="@color/white" />

                        <te.app.evidence.customViews.views.CustomTextViewMedium
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp12w"
                            android:layout_marginTop="@dimen/dp20h"
                            android:drawableStart="@drawable/ic_users"
                            android:drawablePadding="@dimen/dp6w"
                            android:gravity="center"
                            android:tag="binding_5"                                                                                                                          
                            android:text="@string/menuUsers"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="@color/white" />

                        <te.app.evidence.customViews.views.CustomTextViewMedium
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp12w"
                            android:layout_marginTop="@dimen/dp20h"
                            android:drawableStart="@drawable/ic_users"
                            android:drawablePadding="@dimen/dp6w"
                            android:gravity="center"
                            android:tag="binding_6"                                                                                                                              
                            android:text="@string/menuClients"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="@color/white" />

                        <te.app.evidence.customViews.views.CustomTextViewRegular
                            android:id="@+id/add_case"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp12w"
                            android:layout_marginTop="@dimen/dp20h"
                            android:layout_marginEnd="@dimen/dp4w"
                            android:drawableStart="@drawable/ic_cases"
                            android:drawablePadding="@dimen/dp6w"
                            android:tag="binding_7"                                                                                                                                
                            android:text="@string/add_case"
                            android:textAlignment="viewStart"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="@color/white"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <te.app.evidence.customViews.views.CustomTextViewRegular
                            android:id="@+id/search_case"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp12w"
                            android:layout_marginTop="@dimen/dp20h"
                            android:layout_marginEnd="@dimen/dp4w"
                            android:drawableStart="@drawable/ic_cases"
                            android:drawablePadding="@dimen/dp6w"
                            android:tag="binding_8"                                                                                                                                   
                            android:text="@string/search_case"
                            android:textAlignment="viewStart"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="@color/white"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/add_case"
                            app:layout_constraintTop_toTopOf="parent" />


                        <te.app.evidence.customViews.views.CustomTextViewMedium
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp12w"
                            android:layout_marginTop="@dimen/dp20h"
                            android:drawableStart="@drawable/ic_mohdars"
                            android:drawablePadding="@dimen/dp6w"
                            android:gravity="center"
                            android:tag="binding_9"                                                                                                                                     
                            android:text="@string/menuMohdar"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="@color/white" />

                        <te.app.evidence.customViews.views.CustomTextViewMedium
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp12w"
                            android:layout_marginTop="@dimen/dp20h"
                            android:drawableStart="@drawable/ic_categories"
                            android:drawablePadding="@dimen/dp6w"
                            android:gravity="center"
                            android:tag="binding_10"                                                                                                                                 
                            android:text="@string/menuCat"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="@color/white"
                                                                                                                                />

                        <te.app.evidence.customViews.views.CustomTextViewMedium
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp12w"
                            android:layout_marginTop="@dimen/dp20h"
                            android:drawableStart="@drawable/ic_reports"
                            android:drawablePadding="@dimen/dp6w"
                            android:gravity="center"
                            android:tag="binding_11"                                                                                                                                    
                            android:text="@string/daily_reports"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="@color/white"
                                                                                                                                       />

                        <te.app.evidence.customViews.views.CustomTextViewMedium
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp12w"
                            android:layout_marginTop="@dimen/dp20h"
                            android:drawableStart="@drawable/ic_reports"
                            android:drawablePadding="@dimen/dp6w"
                            android:gravity="center"
                            android:tag="binding_12"                                                                                                                                      
                            android:text="@string/monthly_reports"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="@color/white"
                                                                                                                                         />


                        <te.app.evidence.customViews.views.CustomTextViewMedium
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp12w"
                            android:layout_marginTop="@dimen/dp20h"
                            android:drawableStart="@drawable/ic_best_price"
                            android:drawablePadding="@dimen/dp6w"
                            android:gravity="center"
                            android:tag="binding_13"                                                
                            android:text="@string/packes"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="@color/white"
                                                                                                                                />


                        <te.app.evidence.customViews.views.CustomTextViewMedium
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp12w"
                            android:layout_marginTop="@dimen/dp20h"
                            android:drawableStart="@drawable/ic_contact"
                            android:drawablePadding="@dimen/dp6w"
                            android:gravity="center"
                            android:tag="binding_14"                                                  
                            android:text="@string/tv_account_contact"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="@color/white" />

                        <te.app.evidence.customViews.views.CustomTextViewMedium
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp12w"
                            android:layout_marginTop="@dimen/dp4h"
                            android:layout_marginBottom="@dimen/dp8h"
                            android:drawableStart="@drawable/ic_lang"
                            android:drawablePadding="@dimen/dp6w"
                            android:gravity="center"
                            android:tag="binding_15"                                
                            android:text="@string/lang"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="@color/white"
                            android:visibility="gone" />

                        <te.app.evidence.customViews.views.CustomTextViewMedium
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp12w"
                            android:layout_marginTop="@dimen/dp20h"
                            android:layout_marginBottom="@dimen/dp8h"
                            android:drawableStart="@drawable/ic_logout"
                            android:drawablePadding="@dimen/dp6w"
                            android:gravity="center"
                            android:tag="binding_16"                        
                            android:text="@string/logout"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="@color/white" />

                    </LinearLayout>
                </androidx.core.widget.NestedScrollView>

            </RelativeLayout>
        </androidx.drawerlayout.widget.DrawerLayout>
    </RelativeLayout>
         