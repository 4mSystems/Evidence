                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp10w"
                        android:layout_marginEnd="@dimen/dp10w"
                        android:text="@{viewmodel.caseDetails.caseData.invetationNum}"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/header_data_table"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/tv_invetationNum_text"
                        app:layout_constraintTop_toTopOf="@+id/tv_invetationNum_text" />

                    <View
                        android:id="@+id/v1"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/dp8h"
                        android:background="@color/line_color"
                        app:layout_constraintTop_toBottomOf="@id/tv_invetationNum" />

                    <te.app.evidence.customViews.views.CustomTextViewMedium
