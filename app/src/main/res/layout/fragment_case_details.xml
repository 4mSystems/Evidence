                        android:layout_marginStart="@dimen/dp15w"
                        android:layout_marginTop="@dimen/dp12h"
                        android:layout_marginEnd="@dimen/dp4w"
                        android:text="@string/case_number"
                        android:textAlignment="viewStart"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/colorPrimary"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <te.app.evidence.customViews.views.CustomTextViewRegular
                        android:id="@+id/tv_invetationNum"
