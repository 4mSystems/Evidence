<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="itemViewModel"
            type="grand.app.akar.pages.chat.viewmodel.ItemChatImagesViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/image1"
            android:layout_width="@dimen/dp100w"
            android:layout_height="@dimen/dp110h"
            android:layout_marginStart="@dimen/dp7w"
            android:layout_marginEnd="@dimen/dp7w"
            android:onClick="@{(rootView)-> itemViewModel.showImage(itemViewModel.defaultImg.media,rootView)}"
            android:src="@drawable/holo"
            app:imageUrl="@{itemViewModel.defaultImg.media}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:riv_corner_radius="@dimen/dp6h" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>