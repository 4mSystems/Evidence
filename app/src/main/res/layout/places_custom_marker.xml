<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp4h">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/custom_img"
        android:layout_width="@dimen/dp80w"
        android:layout_height="@dimen/dp80h"
        android:src="@drawable/places_custom_marker_background" />

    <grand.app.akar.customViews.views.CustomTextViewMedium
        android:id="@+id/price_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp20h"
        android:layout_marginBottom="@dimen/dp8h"
        android:padding="@dimen/dp8h"
        android:text="250 مليون"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@color/white" />
</RelativeLayout>