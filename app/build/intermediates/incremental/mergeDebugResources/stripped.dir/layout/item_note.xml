<?xml version="1.0" encoding="utf-8"?>

                                                        

    

                 
                                
                                                                               
           

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" android:tag="layout/item_note_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <com.github.florent37.expansionpanel.ExpansionHeader
            android:id="@+id/layout_clients_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp12w"
            android:layout_marginEnd="@dimen/dp12w"
            android:layout_marginBottom="@dimen/dp6h"
            app:expansion_headerIndicator="@id/icon_down_qu"
            app:expansion_layout="@id/expansionLayoutClients"
            app:expansion_toggleOnClick="true"
            app:layout_constraintTop_toTopOf="parent">
            <!-- HEADER INDICATOR -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp3h">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/icon_down_qu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp8w"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_emp_name"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tv_emp_name"
                    app:srcCompat="@drawable/ic_expansion_header_indicator_grey_24dp" />

                <te.app.evidence.customViews.views.CustomTextViewMedium
                    android:id="@+id/tv_emp_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp6h"
                    android:tag="binding_1"                                             
                    android:textAlignment="viewStart"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/colorPrimary"
                    app:layout_constraintEnd_toStartOf="@+id/icon_down_qu"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/v1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/dp8h"
                    android:background="@color/line_color"
                    app:layout_constraintTop_toBottomOf="@id/tv_emp_name" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.github.florent37.expansionpanel.ExpansionHeader>


        <com.github.florent37.expansionpanel.ExpansionLayout
            android:id="@+id/expansionLayoutClients"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp6h"
            android:layout_marginBottom="@dimen/dp6h"
            app:expansion_expanded="false"
            app:layout_constraintTop_toBottomOf="@id/v1">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <te.app.evidence.customViews.views.CustomTextViewRegular
                    android:id="@+id/unit_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp25w"
                    android:layout_marginTop="@dimen/dp12h"
                    android:layout_marginEnd="@dimen/dp4w"
                    android:text="@string/emp_name"
                    android:textAlignment="viewStart"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/colorPrimary"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <te.app.evidence.customViews.views.CustomTextViewRegular
                    android:id="@+id/unit_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp10w"
                    android:layout_marginEnd="@dimen/dp20w"
                    android:tag="binding_2"                        
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/header_data_table"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/unit_text"
                    app:layout_constraintTop_toTopOf="@id/unit_text" />


                <View
                    android:id="@+id/v3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/dp12h"
                    android:background="@color/line_color"
                    app:layout_constraintTop_toBottomOf="@id/unit_value" />

                <te.app.evidence.customViews.views.CustomTextViewRegular
                    android:id="@+id/client_note_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp25w"
                    android:layout_marginTop="@dimen/dp12h"
                    android:layout_marginEnd="@dimen/dp5w"
                    android:text="@string/client_note"
                    android:textAlignment="viewStart"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/colorPrimary"
                    app:layout_constraintEnd_toStartOf="@id/client_note_value"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/v3" />

                <te.app.evidence.customViews.views.CustomTextViewRegular
                    android:id="@+id/client_note_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp20w"
                    android:tag="binding_3"                    
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/header_data_table"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/client_note_text"
                    app:layout_constraintTop_toTopOf="@id/client_note_text" />

                <View
                    android:id="@+id/v4"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/dp12h"
                    android:background="@color/line_color"
                    app:layout_constraintTop_toBottomOf="@id/client_note_value" />

                <te.app.evidence.customViews.views.CustomTextViewRegular
                    android:id="@+id/delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp8w"
                    android:layout_marginTop="@dimen/dp6h"
                    android:layout_marginEnd="@dimen/dp4w"
                    android:drawableTop="@drawable/ic_user_delete"
                    android:tag="binding_4"                           
                    android:text="@string/delete"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/header_data_table"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/edit"
                    app:layout_constraintTop_toBottomOf="@+id/v4" />

                <te.app.evidence.customViews.views.CustomTextViewRegular
                    android:id="@+id/edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp8w"
                    android:layout_marginTop="@dimen/dp6h"
                    android:drawableTop="@drawable/ic_user_edit"
                    android:tag="binding_5"                         
                    android:text="@string/edit"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/header_data_table"
                    app:layout_constraintEnd_toStartOf="@+id/delete"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/v4" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.github.florent37.expansionpanel.ExpansionLayout>

    </LinearLayout>
         