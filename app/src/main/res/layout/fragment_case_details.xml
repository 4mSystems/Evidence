                        app:layout_constraintTop_toBottomOf="@id/paper_type_value" />

                    <te.app.evidence.customViews.views.CustomTextViewMedium
                        android:id="@+id/paper_number_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp15w"
                        android:layout_marginTop="@dimen/dp12h"
                        android:layout_marginEnd="@dimen/dp4w"
                        android:text="@string/court"
                        android:textAlignment="viewStart"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/colorPrimary"
