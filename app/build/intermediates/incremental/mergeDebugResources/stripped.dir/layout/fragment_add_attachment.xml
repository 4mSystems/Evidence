<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                  
                                                               

    

                                           

                                                

                                                         


                 
                            
                                                                                         
           

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:tag="layout/fragment_add_attachment_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" tools:context="te.app.moon.views.fragments.SplashFragment">


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_file"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp6w"
            android:layout_marginTop="@dimen/dp10h"
            android:layout_marginEnd="@dimen/dp6w"
            app:endIconDrawable="@drawable/ic_upload_folder"
            app:endIconMode="custom"
            app:endIconTint="@color/colorPrimaryDark"
            android:tag="binding_1"                             
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/file"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:hint="@string/select_image_from"
                android:inputType="textMultiLine"
                android:tag="binding_2"                     
                android:textColor="@color/colorPrimaryDark"
                android:textColorHint="@color/overlayBackground" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_desc"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp6w"
            android:layout_marginTop="@dimen/dp10h"
            android:layout_marginEnd="@dimen/dp6w"
            android:tag="binding_3"                             
            app:layout_constraintTop_toBottomOf="@+id/input_file">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp100h"
                android:gravity="top"
                android:hint="@string/attach_desc"
                android:inputType="textMultiLine"
                android:tag="binding_4"                            
                android:textColor="@color/colorPrimaryDark"
                android:textColorHint="@color/overlayBackground" />
        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"                                                                                                                                               
            android:tag="binding_5"                                                                                                
                                                           
            android:text="@string/add_new_attach"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent" />

        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/progress"
            style="Widget.MaterialComponents.LinearProgressIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:tag="binding_6"                                                                                                                        
            app:layout_constraintBottom_toBottomOf="@id/btnSave"
            app:layout_constraintStart_toStartOf="@id/btnSave"
            app:layout_constraintTop_toTopOf="@id/btnSave"
            app:trackColor="@color/white"
            app:trackThickness="@dimen/dp4h" />

    </androidx.constraintlayout.widget.ConstraintLayout>

         