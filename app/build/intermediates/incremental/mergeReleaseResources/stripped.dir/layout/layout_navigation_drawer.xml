<?xml version="1.0" encoding="utf-8"?>

                                                        

    

                 
                                
                                                                    
           

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical" android:tag="layout/layout_navigation_drawer_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">


        <androidx.drawerlayout.widget.DrawerLayout
            android:id="@+id/dl_main_navigation_menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:id="@+id/rl_navigation_drawer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_base_action_bar_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                </LinearLayout>


                <FrameLayout
                    android:id="@+id/fl_home_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/ll_base_action_bar_container">

                </FrameLayout>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_navigation_drawer_header"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:background="@drawable/corner_view_gradient"
                android:orientation="vertical">


                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rl_navigation_drawer_logo"
                        android:orientation="vertical">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/vv_navigation_drawer_image"
                            android:layout_width="@dimen/dp60h"
                            android:layout_height="@dimen/dp60h"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/dp25h"
                            android:src="@drawable/logo"
                            app:civ_border_color="@color/white"
                            app:civ_border_width="4dp"
                            android:tag="binding_1"                                 />

                        <te.app.evidence.customViews.views.CustomTextViewMedium
                            android:id="@+id/tv_user_login"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/dp8h"
                            android:tag="binding_2"                               
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="@color/white" />

                        <te.app.evidence.customViews.views.CustomTextViewMedium
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp12w"
                            android:layout_marginTop="@dimen/dp25h"
                            android:drawableStart="@drawable/ic_home"
                            android:drawablePadding="@dimen/dp6w"
                            android:gravity="center"
                            android:tag="binding_3"                         
                            android:text="@string/menuHome"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="@color/white" />

                        <te.app.evidence.customViews.views.CustomTextViewMedium
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp12w"
                            android:layout_marginTop="@dimen/dp20h"
                            android:drawableStart="@drawable/ic_users"
                            android:drawablePadding="@dimen/dp6w"
                            android:gravity="center"
                            android:tag="binding_4"                          
                            android:text="@string/menuUsers"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="@color/white" />

                        <te.app.evidence.customViews.views.CustomTextViewMedium
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp12w"
                            android:layout_marginTop="@dimen/dp20h"
                            android:drawableStart="@drawable/ic_users"
                            android:drawablePadding="@dimen/dp6w"
                            android:gravity="center"
                            android:tag="binding_5"                            
                            android:text="@string/menuClients"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="@color/white" />

                        <com.github.florent37.expansionpanel.ExpansionHeader
                            android:id="@+id/layout_cases_header"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp6w"
                            android:layout_marginTop="@dimen/dp10h"
                            android:layout_marginEnd="@dimen/dp12w"
                            android:layout_marginBottom="@dimen/dp6h"
                            app:expansion_headerIndicator="@id/icon_down_case"
                            app:expansion_layout="@id/expansionLayoutCases"
                            app:expansion_toggleOnClick="true"

                            app:layout_constraintTop_toTopOf="parent">
                            <!-- HEADER INDICATOR -->
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp3h">

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/icon_down_case"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="@dimen/dp8w"
                                    app:layout_constraintBottom_toBottomOf="@+id/tv_case"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="@+id/tv_case"
                                    app:srcCompat="@drawable/ic_expansion_header_indicator_grey_24dp" />

                                <te.app.evidence.customViews.views.CustomTextViewMedium
                                    android:id="@+id/tv_case"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:drawableStart="@drawable/ic_cases"
                                    android:drawablePadding="@dimen/dp6w"
                                    android:padding="@dimen/dp6h"
                                    android:text="@string/menuCases"
                                    android:textAlignment="viewStart"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                    android:textColor="@color/white"
                                    app:layout_constraintEnd_toStartOf="@+id/icon_down_case"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </com.github.florent37.expansionpanel.ExpansionHeader>

                        <com.github.florent37.expansionpanel.ExpansionLayout
                            android:id="@+id/expansionLayoutCases"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="@dimen/dp6h"
                            app:expansion_expanded="false"
                            app:layout_constraintTop_toBottomOf="@id/v1">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <te.app.evidence.customViews.views.CustomTextViewRegular
                                    android:id="@+id/add_case"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/dp25w"
                                    android:layout_marginTop="@dimen/dp12h"
                                    android:layout_marginEnd="@dimen/dp4w"
                                    android:tag="binding_6"                          
                                    android:text="@string/add_case"
                                    android:textAlignment="viewStart"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                    android:textColor="@color/white"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <te.app.evidence.customViews.views.CustomTextViewRegular
                                    android:id="@+id/search_case"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/dp25w"
                                    android:layout_marginTop="@dimen/dp12h"
                                    android:layout_marginEnd="@dimen/dp4w"
                                    android:tag="binding_7"                             
                                    android:text="@string/search_case"
                                    android:textAlignment="viewStart"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                    android:textColor="@color/white"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toEndOf="@+id/add_case"
                                    app:layout_constraintTop_toTopOf="parent" />

                            </LinearLayout>
                        </com.github.florent37.expansionpanel.ExpansionLayout>

                        <te.app.evidence.customViews.views.CustomTextViewMedium
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp12w"
                            android:layout_marginTop="@dimen/dp4h"
                            android:drawableStart="@drawable/ic_mohdars"
                            android:drawablePadding="@dimen/dp6w"
                            android:gravity="center"
                            android:tag="binding_8"                              
                            android:text="@string/menuMohdar"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="@color/white" />

                        <te.app.evidence.customViews.views.CustomTextViewMedium
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp12w"
                            android:layout_marginTop="@dimen/dp20h"
                            android:drawableStart="@drawable/ic_categories"
                            android:drawablePadding="@dimen/dp6w"
                            android:gravity="center"
                            android:tag="binding_9"                               
                            android:text="@string/menuCat"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="@color/white" />

                        <com.github.florent37.expansionpanel.ExpansionHeader
                            android:id="@+id/layout_reports_header"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp6w"
                            android:layout_marginTop="@dimen/dp10h"
                            android:layout_marginEnd="@dimen/dp12w"
                            android:layout_marginBottom="@dimen/dp6h"
                            app:expansion_headerIndicator="@id/icon_down_qu"
                            app:expansion_layout="@id/expansionLayoutReports"
                            app:expansion_toggleOnClick="true"
                            app:layout_constraintTop_toTopOf="parent">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp3h">

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/icon_down_qu"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="@dimen/dp8w"
                                    app:layout_constraintBottom_toBottomOf="@+id/tv_username"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="@+id/tv_username"
                                    app:srcCompat="@drawable/ic_expansion_header_indicator_grey_24dp" />

                                <te.app.evidence.customViews.views.CustomTextViewMedium
                                    android:id="@+id/tv_username"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:drawableStart="@drawable/ic_reports"
                                    android:drawablePadding="@dimen/dp6w"
                                    android:padding="@dimen/dp6h"
                                    android:text="@string/menuReports"
                                    android:textAlignment="viewStart"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                    android:textColor="@color/white"
                                    app:layout_constraintEnd_toStartOf="@+id/icon_down_qu"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </com.github.florent37.expansionpanel.ExpansionHeader>

                        <com.github.florent37.expansionpanel.ExpansionLayout
                            android:id="@+id/expansionLayoutReports"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="@dimen/dp6h"
                            app:expansion_expanded="false"
                            app:layout_constraintTop_toBottomOf="@id/v1">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <te.app.evidence.customViews.views.CustomTextViewRegular
                                    android:id="@+id/daily_reports"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/dp25w"
                                    android:layout_marginTop="@dimen/dp12h"
                                    android:layout_marginEnd="@dimen/dp4w"
                                    android:text="@string/daily_reports"
                                    android:textAlignment="viewStart"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                    android:textColor="@color/white"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <te.app.evidence.customViews.views.CustomTextViewRegular
                                    android:id="@+id/monthly_reports"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/dp25w"
                                    android:layout_marginTop="@dimen/dp12h"
                                    android:layout_marginEnd="@dimen/dp4w"
                                    android:text="@string/monthly_reports"
                                    android:textAlignment="viewStart"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                    android:textColor="@color/white"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toEndOf="@+id/add_case"
                                    app:layout_constraintTop_toTopOf="parent" />

                            </LinearLayout>
                        </com.github.florent37.expansionpanel.ExpansionLayout>


                        <te.app.evidence.customViews.views.CustomTextViewMedium
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp12w"
                            android:layout_marginTop="@dimen/dp4h"
                            android:layout_marginBottom="@dimen/dp8h"
                            android:drawableStart="@drawable/ic_lang"
                            android:drawablePadding="@dimen/dp6w"
                            android:gravity="center"
                            android:tag="binding_10"                                
                            android:text="@string/lang"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="@color/white" />

                        <te.app.evidence.customViews.views.CustomTextViewMedium
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp12w"
                            android:layout_marginTop="@dimen/dp4h"
                            android:layout_marginBottom="@dimen/dp8h"
                            android:drawableStart="@drawable/ic_logout"
                            android:drawablePadding="@dimen/dp6w"
                            android:gravity="center"
                            android:text="@string/logout"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="@color/white" />

                    </LinearLayout>
                </androidx.core.widget.NestedScrollView>

            </RelativeLayout>
        </androidx.drawerlayout.widget.DrawerLayout>
    </RelativeLayout>
         