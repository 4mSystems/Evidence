<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="te.app.moon.views.fragments.SplashFragment">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewmodel"
            type="te.app.evidence.pages.clients.viewModels.ClientProfileViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <te.app.evidence.customViews.views.CustomTextViewMedium
            android:id="@+id/client_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp8w"
            android:layout_marginTop="@dimen/dp10h"
            android:text="@string/client_data"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/colorPrimaryDark"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/client_data_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp8w"
            android:layout_marginTop="@dimen/dp8h"
            android:layout_marginEnd="@dimen/dp8w"
            app:cardCornerRadius="@dimen/dp8h"
            app:cardElevation="6dp"
            app:layout_constraintTop_toBottomOf="@id/client_data">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp15h">

                <te.app.evidence.customViews.views.CustomTextViewRegular
                    android:id="@+id/client_name_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp25w"
                    android:layout_marginEnd="@dimen/dp4w"
                    android:text="@string/client_name"
                    android:textAlignment="viewStart"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/colorPrimary"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <te.app.evidence.customViews.views.CustomTextViewRegular
                    android:id="@+id/client_name_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp10w"
                    android:layout_marginEnd="@dimen/dp20w"
                    android:text="أحمد مصطفي بكري"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/header_data_table"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/client_name_text"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/v6"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/dp12h"
                    android:background="@color/line_color"
                    app:layout_constraintTop_toBottomOf="@id/client_name_value" />

                <te.app.evidence.customViews.views.CustomTextViewRegular
                    android:id="@+id/unit_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp25w"
                    android:layout_marginTop="@dimen/dp12h"
                    android:layout_marginEnd="@dimen/dp4w"
                    android:text="@string/client_unit"
                    android:textAlignment="viewStart"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/colorPrimary"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/v6" />

                <te.app.evidence.customViews.views.CustomTextViewRegular
                    android:id="@+id/unit_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp10w"
                    android:layout_marginEnd="@dimen/dp20w"
                    android:text="A-161a-Ground-GB-1-Ph.1"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/header_data_table"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/unit_text"
                    app:layout_constraintTop_toTopOf="@id/unit_text" />

                <View
                    android:id="@+id/v2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/dp12h"
                    android:background="@color/line_color"
                    app:layout_constraintTop_toBottomOf="@id/unit_value" />

                <te.app.evidence.customViews.views.CustomTextViewRegular
                    android:id="@+id/client_type_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp25w"
                    android:layout_marginTop="@dimen/dp12h"
                    android:layout_marginEnd="@dimen/dp5w"
                    android:text="@string/user_type"
                    android:textAlignment="viewStart"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/colorPrimary"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/v2" />

                <te.app.evidence.customViews.views.CustomTextViewRegular
                    android:id="@+id/client_type_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp20w"
                    android:text="Client"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/header_data_table"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/client_type_text"
                    app:layout_constraintTop_toTopOf="@id/client_type_text" />

                <View
                    android:id="@+id/v5"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/dp8h"
                    android:background="@color/line_color"
                    app:layout_constraintTop_toBottomOf="@id/client_type_text" />


                <te.app.evidence.customViews.views.CustomTextViewRegular
                    android:id="@+id/client_address_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp25w"
                    android:layout_marginTop="@dimen/dp12h"
                    android:layout_marginEnd="@dimen/dp5w"
                    android:text="@string/client_address"
                    android:textAlignment="viewStart"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/colorPrimary"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/v5" />

                <te.app.evidence.customViews.views.CustomTextViewRegular
                    android:id="@+id/client_address_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp10w"
                    android:layout_marginEnd="@dimen/dp20w"
                    android:text="مكتب 131 الدور ال11 برج مامكو 1 شارع كورنيش النيل"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/header_data_table"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/client_address_text"
                    app:layout_constraintTop_toTopOf="@id/client_address_text" />

                <View
                    android:id="@+id/v3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/dp12h"
                    android:background="@color/line_color"
                    app:layout_constraintTop_toBottomOf="@id/client_address_value" />

                <te.app.evidence.customViews.views.CustomTextViewRegular
                    android:id="@+id/client_note_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp25w"
                    android:layout_marginTop="@dimen/dp12h"
                    android:layout_marginEnd="@dimen/dp5w"
                    android:text="@string/client_note"
                    android:textAlignment="viewStart"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/colorPrimary"
                    app:layout_constraintEnd_toStartOf="@id/client_note_value"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/v3" />

                <te.app.evidence.customViews.views.CustomTextViewRegular
                    android:id="@+id/client_note_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp20w"
                    android:text="Egypt,Cairo,nasr city awl makrm jhjghadgsjdgfsjhfg"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/header_data_table"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/client_note_text"
                    app:layout_constraintTop_toTopOf="@id/client_note_text" />

                <View
                    android:id="@+id/v4"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/dp12h"
                    android:background="@color/line_color"
                    app:layout_constraintTop_toBottomOf="@id/client_note_value" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/client_notes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp6w"
            android:layout_marginTop="@dimen/dp12h"
            android:background="@{viewmodel.selectedBtn==0?@drawable/corner_view_primary_yellow:@drawable/corner_view_primary_dark_home}"
            android:onClick="@{()->viewmodel.nextSessions()}"
            android:text="@string/client_notes"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/white"
            app:layout_constraintEnd_toStartOf="@+id/client_cases"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/client_data_container" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/client_cases"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp6w"
            android:layout_marginTop="@dimen/dp12h"
            android:layout_marginEnd="@dimen/dp8w"
            android:background="@{viewmodel.selectedBtn==1?@drawable/corner_view_primary_yellow:@drawable/corner_view_primary_dark_home}"
            android:onClick="@{()->viewmodel.previousSessions()}"
            android:text="@string/menuCases"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/client_notes"
            app:layout_constraintTop_toBottomOf="@id/client_data_container" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/br4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="client_cases,client_notes" />

        <te.app.evidence.customViews.views.CustomEditText
            android:id="@+id/input_search"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp14w"
            android:layout_marginTop="@dimen/dp15h"
            android:layout_marginEnd="@dimen/dp14w"
            android:hint="@string/note_search_hint"
            android:inputType="text"
            android:textAlignment="viewStart"
            android:textColorHint="@color/medium_color"
            app:helperTextTextColor="@color/black"
            app:hintTextAppearance="@style/TextAppearance.AppCompat.Small"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/br4"
            app:startIconDrawable="@drawable/ic_search" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp18h"
            app:layout_constraintTop_toBottomOf="@+id/input_search"
            tools:listitem="@layout/item_note" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>