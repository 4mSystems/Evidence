<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <import type="android.text.TextUtils" />

        <import type="te.app.evidence.utils.Constants" />

        <variable
            name="itemViewModel"
            type="te.app.evidence.pages.home.viewModels.SessionItemViewModel" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp4h"
        app:cardCornerRadius="@dimen/dp6h"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp6h">


            <te.app.evidence.customViews.views.CustomTextViewMedium
                android:id="@+id/tv_username"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp25w"
                android:layout_marginTop="@dimen/dp12h"
                android:layout_marginEnd="@dimen/dp4w"
                android:text="@string/case_number"
                android:textAlignment="viewStart"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/colorPrimary"
                android:visibility="@{!TextUtils.isEmpty(itemViewModel.sessionItem.invetation_num)?View.VISIBLE:View.GONE}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <te.app.evidence.customViews.views.CustomTextViewMedium
                android:id="@+id/session_case_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp10w"
                android:layout_marginTop="@dimen/dp12h"
                android:layout_marginEnd="@dimen/dp20w"
                android:text="@{itemViewModel.sessionItem.invetation_num}"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/header_data_table"
                android:visibility="@{!TextUtils.isEmpty(itemViewModel.sessionItem.invetation_num)?View.VISIBLE:View.GONE}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_username"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/v9"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/dp8h"
                android:background="@color/line_color"
                android:visibility="@{!TextUtils.isEmpty(itemViewModel.sessionItem.invetation_num)?View.VISIBLE:View.GONE}"
                app:layout_constraintTop_toBottomOf="@id/tv_username" />

            <te.app.evidence.customViews.views.CustomTextViewMedium
                android:id="@+id/session_date_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp25w"
                android:layout_marginTop="@dimen/dp12h"
                android:layout_marginEnd="@dimen/dp4w"
                android:text="@string/session_date"
                android:textAlignment="viewStart"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/colorPrimary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/v9" />

            <te.app.evidence.customViews.views.CustomTextViewMedium
                android:id="@+id/session_date_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp10w"
                android:layout_marginTop="@dimen/dp12h"
                android:layout_marginEnd="@dimen/dp20w"
                android:text="@{itemViewModel.sessionItem.sessionDate}"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/header_data_table"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/session_date_text"
                app:layout_constraintTop_toBottomOf="@+id/v9" />

            <View
                android:id="@+id/v2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/dp12h"
                android:background="@color/line_color"
                app:layout_constraintTop_toBottomOf="@id/session_date_text" />

            <te.app.evidence.customViews.views.CustomTextViewMedium
                android:id="@+id/session_status_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp25w"
                android:layout_marginTop="@dimen/dp12h"
                android:layout_marginEnd="@dimen/dp4w"
                android:text="@string/status"
                android:textAlignment="viewStart"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/colorPrimary"
                app:layout_constraintBottom_toTopOf="@+id/br_status"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/v2" />

            <te.app.evidence.customViews.views.CustomTextViewMedium
                android:id="@+id/session_status_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp10w"
                android:layout_marginTop="@dimen/dp12h"
                android:layout_marginEnd="@dimen/dp20w"
                android:text="@{itemViewModel.sessionItem.status}"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/colorAccent"
                android:visibility="@{!TextUtils.isEmpty(itemViewModel.sessionItem.invetation_num)?View.VISIBLE:View.GONE}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/session_date_text"
                app:layout_constraintTop_toBottomOf="@+id/v2" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/status_value"
                style="@style/Widget.MaterialComponents.Button.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp10w"
                android:layout_marginTop="@dimen/dp10h"
                android:layout_marginEnd="@dimen/dp10w"
                android:onClick="@{()-> itemViewModel.buttonAction(Constants.CHANGE_STATUS)}"
                android:text="@{itemViewModel.sessionItem.status}"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/white"
                android:visibility="@{TextUtils.isEmpty(itemViewModel.sessionItem.invetation_num)?View.VISIBLE:View.GONE}"
                app:cornerRadius="@dimen/dp4h"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/session_date_text"
                app:layout_constraintTop_toBottomOf="@+id/v2"
                app:rippleColor="@color/overlayBackground" />

            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/br_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:barrierDirection="bottom"
                app:constraint_referenced_ids="status_value,session_status_value" />

            <View
                android:id="@+id/v3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/dp12h"
                android:background="@color/line_color"
                app:layout_constraintTop_toBottomOf="@id/br_status" />

            <te.app.evidence.customViews.views.CustomTextViewMedium
                android:id="@+id/session_month_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp25w"
                android:layout_marginTop="@dimen/dp12h"
                android:layout_marginEnd="@dimen/dp4w"
                android:layout_marginBottom="@dimen/dp12h"
                android:text="@string/month"
                android:textAlignment="viewStart"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/colorPrimary"
                android:visibility="@{!TextUtils.isEmpty(itemViewModel.sessionItem.invetation_num)?View.VISIBLE:View.GONE}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/v3" />

            <te.app.evidence.customViews.views.CustomTextViewMedium
                android:id="@+id/session_month_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp10w"
                android:layout_marginTop="@dimen/dp12h"
                android:layout_marginEnd="@dimen/dp20w"
                android:layout_marginBottom="@dimen/dp12h"
                android:text="@{itemViewModel.sessionItem.month}"
                android:textAlignment="center"
                android:textColor="@color/header_data_table"
                android:visibility="@{!TextUtils.isEmpty(itemViewModel.sessionItem.invetation_num)?View.VISIBLE:View.GONE}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/session_date_text"
                app:layout_constraintTop_toBottomOf="@+id/v3" />

            <te.app.evidence.customViews.views.CustomTextViewRegular
                android:id="@+id/delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/ic_user_delete"
                android:onClick="@{()-> itemViewModel.buttonAction(Constants.DELETE)}"
                android:text="@string/delete"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/header_data_table" />

            <te.app.evidence.customViews.views.CustomTextViewRegular
                android:id="@+id/edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/ic_user_edit"
                android:onClick="@{()-> itemViewModel.buttonAction(Constants.EDIT)}"
                android:text="@string/edit"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/header_data_table" />

            <te.app.evidence.customViews.views.CustomTextViewRegular
                android:id="@+id/view_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/ic_session_notes"
                android:drawablePadding="@dimen/dp12h"
                android:onClick="@{()-> itemViewModel.buttonAction(Constants.NOTES)}"
                android:text="@string/notes"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/header_data_table" />

            <androidx.constraintlayout.helper.widget.Flow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp4w"
                android:layout_marginTop="@dimen/dp6h"
                android:layout_marginEnd="@dimen/dp4w"
                android:layout_marginBottom="@dimen/dp6h"
                android:visibility="@{TextUtils.isEmpty(itemViewModel.sessionItem.invetation_num)?View.VISIBLE:View.GONE}"
                app:constraint_referenced_ids="edit,delete,view_value"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/v3" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</layout>