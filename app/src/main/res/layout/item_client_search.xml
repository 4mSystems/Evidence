<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="itemViewModel"
            type="te.app.evidence.pages.clients.viewModels.ClientsItemViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp6h">

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp4h"
            android:checked="@{itemViewModel.clients.checked}"
            android:onCheckedChanged="@{(compoundButton, checked) -> itemViewModel.onCheckedChange(compoundButton, checked)}"
            android:text="@{itemViewModel.clients.clientName}"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/colorPrimaryDark"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/dp4h"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="@dimen/dp8h"
            android:background="@color/overlayBackground"
            app:layout_constraintTop_toBottomOf="@+id/checkbox" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>