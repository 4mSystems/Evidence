<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                  
                                                                  

    

                 
                            
                                                                          
           

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:tag="layout/fragment_register_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" tools:context="grand.app.moon.views.fragments.SplashFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/auth_header">

            <ImageView
                android:id="@+id/img_register_logo"
                android:layout_width="@dimen/dp100w"
                android:layout_height="@dimen/dp100h"
                android:layout_marginTop="@dimen/dp25h"
                android:tag="binding_1"                          
                android:src="@drawable/user_holder"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp8w"
                android:tag="binding_2"                            
                android:src="@drawable/ic_back"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/img_register_logo" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp18h"
                android:background="@drawable/corner_view_auth"
                app:layout_constraintTop_toBottomOf="@+id/img_register_logo">

                <grand.app.akar.customViews.views.CustomTextViewMedium
                    android:id="@+id/tv_register_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp14h"
                    android:text="@string/register_name"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/colordark"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <grand.app.akar.customViews.views.CustomEditText
                    android:id="@+id/input_name"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp14w"
                    android:layout_marginTop="@dimen/dp8h"
                    android:layout_marginEnd="@dimen/dp15w"
                    android:background="@drawable/corner_view_primary_gray"
                    android:drawableStart="@drawable/ic_man"
                    android:drawablePadding="@dimen/dp8w"
                    android:hint="@string/name_hint"
                    android:inputType="text"
                    android:textAlignment="viewStart"
                    android:textColorHint="@color/medium_color"
                    app:helperTextTextColor="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_register_name"
                    android:tag="binding_3"               />

                <grand.app.akar.customViews.views.CustomTextViewMedium
                    android:id="@+id/tv_register_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp14h"
                    android:text="@string/email"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/colordark"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/input_name" />

                <grand.app.akar.customViews.views.CustomEditText
                    android:id="@+id/input_email"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp14w"
                    android:layout_marginTop="@dimen/dp8h"
                    android:layout_marginEnd="@dimen/dp15w"
                    android:background="@drawable/corner_view_primary_gray"
                    android:drawableStart="@drawable/ic_email"
                    android:drawablePadding="@dimen/dp8w"
                    android:hint="@string/email_hint"
                    android:inputType="textEmailAddress"
                    android:textAlignment="viewStart"
                    android:textColorHint="@color/medium_color"
                    app:helperTextTextColor="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_register_email"
                    android:tag="binding_4"                />

                <grand.app.akar.customViews.views.CustomTextViewMedium
                    android:id="@+id/tv_register_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp14h"
                    android:text="@string/register_phone"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/input_email" />

                <grand.app.akar.customViews.views.CustomEditText
                    android:id="@+id/input_phone"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp14w"
                    android:layout_marginTop="@dimen/dp8h"
                    android:layout_marginEnd="@dimen/dp14w"
                    android:background="@drawable/corner_view_primary_gray"
                    android:drawableStart="@drawable/ic_auth_phone"
                    android:drawablePadding="@dimen/dp8w"
                    android:hint="@string/phone"
                    android:inputType="phone"

                    android:textAlignment="viewStart"
                    android:textColorHint="@color/medium_color"
                    app:helperTextTextColor="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_register_phone"
                    android:tag="binding_5"                />

                <grand.app.akar.customViews.views.CustomTextViewMedium
                    android:id="@+id/tv_register_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp14h"
                    android:text="@string/password"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/colordark"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/input_phone" />

                <grand.app.akar.customViews.views.CustomEditText
                    android:id="@+id/input_new_password"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp14w"
                    android:layout_marginTop="@dimen/dp8h"
                    android:layout_marginEnd="@dimen/dp15w"
                    android:background="@drawable/corner_view_primary_gray"
                    android:drawableStart="@drawable/ic_auth_password"
                    android:drawablePadding="@dimen/dp8w"
                    android:hint="@string/password_hint"
                    android:inputType="textPassword"
                    android:textAlignment="viewStart"

                    android:textColorHint="@color/medium_color"
                    app:helperTextTextColor="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_register_password"
                    app:passwordToggleEnabled="true"
                    android:tag="binding_6"                   />

                <grand.app.akar.customViews.views.CustomTextViewMedium
                    android:id="@+id/tv_identity_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp14h"
                    android:layout_marginTop="@dimen/dp8h"
                    android:text="@string/change_confirm_password"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/colordark"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/input_new_password" />

                <grand.app.akar.customViews.views.CustomEditText
                    android:id="@+id/input_register_confirm_password"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp14w"
                    android:layout_marginTop="@dimen/dp8h"
                    android:layout_marginEnd="@dimen/dp14w"
                    android:background="@drawable/corner_view_primary_gray"
                    android:drawableStart="@drawable/ic_auth_password"
                    android:drawablePadding="@dimen/dp8w"
                    android:hint="@string/password_hint"
                    android:inputType="textPassword"
                    android:textAlignment="viewStart"
                    android:textColorHint="@color/medium_color"
                    app:helperTextTextColor="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_identity_number"
                    android:tag="binding_7"                          />

                <grand.app.akar.customViews.views.CustomTextViewMedium
                    android:id="@+id/tv_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp14h"
                    android:layout_marginTop="@dimen/dp8h"
                    android:text="@string/choose_membrship"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/colordark"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/input_register_confirm_password" />

                <grand.app.akar.customViews.views.CustomEditText
                    android:id="@+id/input_register_user_type"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp14w"
                    android:layout_marginTop="@dimen/dp8h"
                    android:layout_marginEnd="@dimen/dp14w"
                    android:background="@drawable/corner_view_primary_gray"
                    android:drawableStart="@drawable/ic_man"
                    android:drawablePadding="@dimen/dp8w"
                    android:focusable="false"
                    android:hint="@string/choose_membrship_input"
                    android:inputType="text"
                    android:tag="binding_8"                      
                    android:textAlignment="viewStart"
                    android:textColorHint="@color/medium_color"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_type" />

                <grand.app.akar.customViews.views.CustomTextViewMedium
                    android:id="@+id/tv_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp14h"
                    android:layout_marginTop="@dimen/dp8h"
                    android:text="@string/choose_city"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/colordark"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/input_register_user_type" />

                <grand.app.akar.customViews.views.CustomEditText
                    android:id="@+id/input_register_city"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp14w"
                    android:layout_marginTop="@dimen/dp8h"
                    android:layout_marginEnd="@dimen/dp14w"
                    android:background="@drawable/corner_view_primary_gray"
                    android:drawableStart="@drawable/ic_living_room"
                    android:drawablePadding="@dimen/dp8w"
                    android:focusable="false"
                    android:hint="@string/choose_membrship_input"
                    android:inputType="text"
                    android:tag="binding_9"                    
                    android:textAlignment="viewStart"
                    android:textColorHint="@color/medium_color"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_city" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/appCompatButtonNext"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp12w"
                    android:layout_marginTop="@dimen/dp20h"
                    android:layout_marginEnd="@dimen/dp12w"
                    android:background="@drawable/corner_view_primary_dark"
                    android:tag="binding_10"                      
                    android:text="@string/register"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/input_register_city" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp15h"
                    android:layout_marginBottom="@dimen/dp15h"
                    android:gravity="center_horizontal"
                    android:tag="binding_11"                           
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/appCompatButtonNext">

                    <grand.app.akar.customViews.views.CustomTextViewMedium
                        android:id="@+id/tv_login_forget"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp4w"
                        android:text="@string/login"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/colorPrimary" />

                    <grand.app.akar.customViews.views.CustomTextViewMedium
                        android:id="@+id/tv_forget_timer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/have_account"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="#858585" />

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
         