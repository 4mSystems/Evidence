<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="te.app.moon.views.fragments.SplashFragment">

    <data>

        <import type="android.view.View" />

        <import type="te.app.evidence.utils.Constants" />

        <variable
            name="viewmodel"
            type="te.app.evidence.pages.cases.viewModels.AddClientToCaseViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <te.app.evidence.customViews.views.CustomTextViewMedium
            android:id="@+id/tv_clients"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp12w"
            android:layout_marginTop="@dimen/dp10h"
            android:text="@string/clients"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/colorPrimary"
            android:visibility="@{viewmodel.passingObject.id==0?View.VISIBLE:View.GONE,default=gone}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/clients"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp12w"
            android:layout_marginTop="@dimen/dp10h"
            android:layout_marginEnd="@dimen/dp12w"
            android:visibility="@{viewmodel.passingObject.id==0?View.VISIBLE:View.GONE,default=gone}"
            app:error="@{viewmodel.addCaseRequest.mokelError}"
            app:layout_constraintTop_toBottomOf="@+id/tv_clients">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/input_clients"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:gravity="center_vertical"
                android:hint="@string/client_unselected"
                android:inputType="text"
                android:onClick="@{()-> viewmodel.toClients(Constants.CLIENTS)}"
                android:textColor="@color/colorPrimaryDark"
                android:textColorHint="@color/overlayBackground" />
        </com.google.android.material.textfield.TextInputLayout>


        <te.app.evidence.customViews.views.CustomTextViewMedium
            android:id="@+id/tv_khesm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp12w"
            android:layout_marginTop="@dimen/dp10h"
            android:text="@string/opponents"
            android:visibility="@{viewmodel.passingObject.id!=0?View.VISIBLE:View.GONE,default=gone}"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/colorPrimary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/clients" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_khesms"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp12w"
            android:layout_marginTop="@dimen/dp10h"
            android:layout_marginEnd="@dimen/dp12w"
            android:visibility="@{viewmodel.passingObject.id!=0?View.VISIBLE:View.GONE,default=gone}"
            app:error="@{viewmodel.addCaseRequest.khesmError}"
            app:layout_constraintTop_toBottomOf="@+id/tv_khesm">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/input_khesm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:gravity="center_vertical"
                android:hint="@string/khesm_unselected"
                android:inputType="text"
                android:onClick="@{()->viewmodel.toClients(Constants.KHESM)}"
                android:textColor="@color/colorPrimaryDark"
                android:textColorHint="@color/overlayBackground" />
        </com.google.android.material.textfield.TextInputLayout>


        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp30h"
            android:visibility="@{viewmodel.loader==false?View.GONE:View.VISIBLE}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/input_khesms" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp30h"
            android:background="@color/colorPrimaryDark"
            android:onClick="@{()-> viewmodel.createCase()}"
            android:text="@string/save"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/white"
            android:visibility="@{viewmodel.loader==true?View.GONE:View.VISIBLE}"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>