                    app:pcv_mode="ring"
                    app:pcv_orientation="clockwise"
                    app:pcv_startAngle="270"
                    app:pcv_textColor="@color/colorPrimary"
                    app:pcv_textSize="@dimen/sp1" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/home_item3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/corner_view_gradient_statistics"
                android:tag="binding_4"                                                                                                                  >

                <te.app.evidence.customViews.views.CustomTextViewMedium
                    android:id="@+id/home_users"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="binding_5"                                                                                                                                          
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp8w"
                    android:src="@drawable/ic_move"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp18h"
