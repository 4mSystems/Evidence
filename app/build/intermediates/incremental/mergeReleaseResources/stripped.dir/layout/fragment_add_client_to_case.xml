<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                  
                                                               

    

                                           

                                                         

                 
                            
                                                                                     
           

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:tag="layout/fragment_add_client_to_case_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" tools:context="te.app.moon.views.fragments.SplashFragment">

        <te.app.evidence.customViews.views.CustomTextViewMedium
            android:id="@+id/tv_clients"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp12w"
            android:layout_marginTop="@dimen/dp10h"
            android:text="@string/clients"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/colorPrimary"
            android:visibility="gone"                                                                
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"  android:tag="binding_1"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/clients"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp12w"
            android:layout_marginTop="@dimen/dp10h"
            android:layout_marginEnd="@dimen/dp12w"
            android:visibility="gone"                                                                
            android:tag="binding_2"                           
            app:layout_constraintTop_toBottomOf="@+id/tv_clients">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/input_clients"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:gravity="center_vertical"
                android:hint="@string/client_unselected"
                android:inputType="text"
                android:tag="binding_3"                                         
                android:textColor="@color/colorPrimaryDark"
                android:textColorHint="@color/overlayBackground" />
        </com.google.android.material.textfield.TextInputLayout>


        <te.app.evidence.customViews.views.CustomTextViewMedium
            android:id="@+id/tv_khesm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp12w"
            android:layout_marginTop="@dimen/dp10h"
            android:text="@string/opponents"
            android:visibility="gone"                                                                
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/colorPrimary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/clients"  android:tag="binding_4"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_khesms"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp12w"
            android:layout_marginTop="@dimen/dp10h"
            android:layout_marginEnd="@dimen/dp12w"
            android:visibility="gone"                                                                
            android:tag="binding_5"                           
            app:layout_constraintTop_toBottomOf="@+id/tv_khesm">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/input_khesm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:gravity="center_vertical"
                android:hint="@string/khesm_unselected"
                android:inputType="text"
                android:tag="binding_6"                                      
                android:textColor="@color/colorPrimaryDark"
                android:textColorHint="@color/overlayBackground" />
        </com.google.android.material.textfield.TextInputLayout>


        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp30h"
            android:tag="binding_7"                                               
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/input_khesms" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp30h"
            android:background="@color/colorPrimaryDark"
            android:tag="binding_8"                         
            android:text="@string/save"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/white"
                                                                                 
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

         