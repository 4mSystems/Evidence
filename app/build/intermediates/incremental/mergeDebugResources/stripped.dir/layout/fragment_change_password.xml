<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                  
                                                                  

    

                 
                            
                                                                                      
           

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:tag="layout/fragment_change_password_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" tools:context="grand.app.moon.views.fragments.SplashFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/auth_header">

            <ImageView
                android:id="@+id/img_login_logo"
                android:layout_width="@dimen/dp100w"
                android:layout_height="@dimen/dp100h"
                android:layout_marginTop="@dimen/dp25h"
                android:src="@drawable/logo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp8w"
                android:tag="binding_1"                            
                android:src="@drawable/ic_back"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/img_login_logo" />

            <grand.app.akar.customViews.views.CustomTextViewMedium
                android:id="@+id/tv_login_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp8h"
                android:text="@string/app_name"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/img_login_logo" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp18h"
                android:background="@drawable/corner_view_auth"
                app:layout_constraintTop_toBottomOf="@+id/tv_login_title">

                <grand.app.akar.customViews.views.CustomTextViewMedium
                    android:id="@+id/tv_change_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp18h"
                    android:text="@string/login_header"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <grand.app.akar.customViews.views.CustomTextViewRegular
                    android:id="@+id/tv_change_header_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp40w"
                    android:layout_marginEnd="@dimen/dp40w"
                    android:layout_marginTop="@dimen/dp8h"
                    android:text="@string/change_header_text"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="#8A98A3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_change_title" />

                <grand.app.akar.customViews.views.CustomTextViewMedium
                    android:id="@+id/tv_change_new_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp8h"
                    android:layout_marginTop="@dimen/dp20h"
                    android:text="@string/change_new_password"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="#313131"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_change_header_text" />

                <grand.app.akar.customViews.views.CustomEditText
                    android:id="@+id/input_new_password"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp8h"
                    android:layout_marginTop="@dimen/dp8h"
                    android:layout_marginEnd="@dimen/dp12w"
                    android:hint="@string/password_hint"
                    android:background="@drawable/corner_view_primary_gray"
                    android:drawableStart="@drawable/ic_auth_password"
                    android:drawablePadding="@dimen/dp8w"
                    android:inputType="textPassword"
                    android:textAlignment="viewStart"
                    android:textColorHint="@color/overlayBackground"
                    app:helperTextTextColor="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_change_new_password"
                    app:passwordToggleEnabled="true"
                    android:tag="binding_2"                   />


                <grand.app.akar.customViews.views.CustomTextViewMedium
                    android:id="@+id/tv_change_confirm_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp8h"
                    android:layout_marginTop="@dimen/dp20h"
                    android:text="@string/change_confirm_password_no_star"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="#313131"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/input_new_password" />

                <grand.app.akar.customViews.views.CustomEditText
                    android:id="@+id/input_confirm_password"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp8h"
                    android:layout_marginTop="@dimen/dp8h"
                    android:layout_marginEnd="@dimen/dp12w"
                    android:hint="@string/password_hint"
                    android:inputType="textPassword"
                    android:background="@drawable/corner_view_primary_gray"
                    android:drawableStart="@drawable/ic_auth_password"
                    android:drawablePadding="@dimen/dp8w"
                    android:textAlignment="viewStart"
                    android:textColorHint="@color/overlayBackground"
                    app:helperTextTextColor="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_change_confirm_password"
                    app:passwordToggleEnabled="true"
                    android:tag="binding_3"                          />


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/appCompatButtonNext"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp12w"
                    android:layout_marginTop="@dimen/dp20h"
                    android:layout_marginEnd="@dimen/dp12w"
                    android:background="@drawable/corner_view_primary_dark"
                    android:tag="binding_4"                     
                    android:text="@string/confirm"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/input_confirm_password" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
         