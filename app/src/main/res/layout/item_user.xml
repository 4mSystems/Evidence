<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="itemViewModel"
            type="te.app.evidence.pages.users.viewModels.UserItemViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.github.florent37.expansionpanel.ExpansionHeader
            android:id="@+id/layout_session_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp12w"
            android:layout_marginEnd="@dimen/dp12w"
            android:layout_marginBottom="@dimen/dp6h"
            app:expansion_headerIndicator="@id/icon_down_qu"
            app:expansion_layout="@id/expansionLayoutSessions"
            app:expansion_toggleOnClick="true"
            app:layout_constraintTop_toTopOf="parent">
            <!-- HEADER INDICATOR -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp3h">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/icon_down_qu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp8w"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_username"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tv_username"
                    app:srcCompat="@drawable/ic_expansion_header_indicator_grey_24dp" />

                <te.app.evidence.customViews.views.CustomTextViewMedium
                    android:id="@+id/tv_username"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp6h"
                    android:text="@{itemViewModel.systemUserData.name}"
                    android:textAlignment="viewStart"
                    android:textColor="@color/header_data_table"
                    app:layout_constraintEnd_toStartOf="@+id/icon_down_qu"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/v1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/dp8h"
                    android:background="@color/line_color"
                    app:layout_constraintTop_toBottomOf="@id/tv_username" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.github.florent37.expansionpanel.ExpansionHeader>


        <com.github.florent37.expansionpanel.ExpansionLayout
            android:id="@+id/expansionLayoutSessions"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp6h"
            android:layout_marginBottom="@dimen/dp6h"
            app:expansion_expanded="false"
            app:layout_constraintTop_toBottomOf="@id/v1">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <te.app.evidence.customViews.views.CustomTextViewRegular
                    android:id="@+id/email_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp25w"
                    android:layout_marginTop="@dimen/dp12h"
                    android:layout_marginEnd="@dimen/dp4w"
                    android:text="@string/email"
                    android:textAlignment="viewStart"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/colorPrimary"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <te.app.evidence.customViews.views.CustomTextViewRegular
                    android:id="@+id/email_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp10w"
                    android:layout_marginTop="@dimen/dp12h"
                    android:layout_marginEnd="@dimen/dp20w"
                    android:text="@{itemViewModel.systemUserData.email}"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/header_data_table"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/email_text"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/v2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/dp12h"
                    android:background="@color/line_color"
                    app:layout_constraintTop_toBottomOf="@id/email_text" />

                <te.app.evidence.customViews.views.CustomTextViewRegular
                    android:id="@+id/user_type_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp25w"
                    android:layout_marginTop="@dimen/dp12h"
                    android:layout_marginEnd="@dimen/dp4w"
                    android:text="@string/user_type"
                    android:textAlignment="viewStart"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/colorPrimary"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/v2" />

                <te.app.evidence.customViews.views.CustomTextViewRegular
                    android:id="@+id/user_type_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp10w"
                    android:layout_marginTop="@dimen/dp12h"
                    android:layout_marginEnd="@dimen/dp20w"
                    android:text="@{itemViewModel.systemUserData.type}"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/header_data_table"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/user_type_text"
                    app:layout_constraintTop_toBottomOf="@+id/v2" />

                <View
                    android:id="@+id/v3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/dp12h"
                    android:background="@color/line_color"
                    app:layout_constraintTop_toBottomOf="@id/user_type_text" />

                <te.app.evidence.customViews.views.CustomTextViewRegular
                    android:id="@+id/user_phone_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp25w"
                    android:layout_marginTop="@dimen/dp12h"
                    android:layout_marginEnd="@dimen/dp4w"
                    android:text="@string/phone"
                    android:textAlignment="viewStart"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/colorPrimary"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/v3" />

                <te.app.evidence.customViews.views.CustomTextViewRegular
                    android:id="@+id/user_phone_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp10w"
                    android:layout_marginTop="@dimen/dp12h"
                    android:layout_marginEnd="@dimen/dp20w"
                    android:text="@{itemViewModel.systemUserData.phone}"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/header_data_table"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/user_phone_text"
                    app:layout_constraintTop_toBottomOf="@+id/v3" />

                <View
                    android:id="@+id/v4"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/dp12h"
                    android:background="@color/line_color"
                    app:layout_constraintTop_toBottomOf="@id/user_phone_text" />

                <te.app.evidence.customViews.views.CustomTextViewRegular
                    android:id="@+id/user_address_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp25w"
                    android:layout_marginTop="@dimen/dp12h"
                    android:layout_marginEnd="@dimen/dp4w"
                    android:text="@string/client_address"
                    android:textAlignment="viewStart"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/colorPrimary"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/v4" />

                <te.app.evidence.customViews.views.CustomTextViewRegular
                    android:id="@+id/user_address_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp10w"
                    android:layout_marginTop="@dimen/dp12h"
                    android:layout_marginEnd="@dimen/dp20w"
                    android:text="@{itemViewModel.systemUserData.address}"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/header_data_table"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/user_address_text"
                    app:layout_constraintTop_toBottomOf="@+id/v4" />

                <View
                    android:id="@+id/v5"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/dp12h"
                    android:background="@color/line_color"
                    app:layout_constraintTop_toBottomOf="@id/user_address_text" />

                <te.app.evidence.customViews.views.CustomTextViewRegular
                    android:id="@+id/permission"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp6h"
                    android:layout_marginEnd="@dimen/dp10w"
                    android:drawableTop="@drawable/ic_user_permission"
                    android:text="@string/user_permission"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/header_data_table"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/delete"
                    app:layout_constraintTop_toBottomOf="@+id/v5" />

                <te.app.evidence.customViews.views.CustomTextViewRegular
                    android:id="@+id/delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp4w"
                    android:layout_marginTop="@dimen/dp6h"
                    android:layout_marginEnd="@dimen/dp4w"
                    android:drawableTop="@drawable/ic_user_delete"
                    android:text="@string/delete"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/header_data_table"
                    app:layout_constraintEnd_toStartOf="@+id/permission"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/edit"
                    app:layout_constraintTop_toBottomOf="@+id/v5" />

                <te.app.evidence.customViews.views.CustomTextViewRegular
                    android:id="@+id/edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp6h"
                    android:drawableTop="@drawable/ic_user_edit"
                    android:onClick="@{()-> itemViewModel.toEdit()}"
                    android:text="@string/edit"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/header_data_table"
                    app:layout_constraintEnd_toStartOf="@+id/delete"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/v5" />

                <androidx.constraintlayout.widget.Barrier
                    android:id="@+id/br5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:barrierDirection="bottom"
                    app:constraint_referenced_ids="edit,delete,permission" />

                <View
                    android:id="@+id/v8"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/dp8h"
                    android:background="@color/line_color"
                    app:layout_constraintTop_toBottomOf="@id/br5" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.github.florent37.expansionpanel.ExpansionLayout>

    </LinearLayout>
</layout>