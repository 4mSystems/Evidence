                android:background="@drawable/corner_view_gradient_statistics">

                <te.app.evidence.customViews.views.CustomTextViewMedium
                    android:id="@+id/home_khems"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{@string/attachments.concat(`\n`).concat(`#`).concat(!TextUtils.isEmpty(viewmodel.caseDetails.numbers.attachmentsNumber)?viewmodel.caseDetails.numbers.attachmentsNumber:``)}"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp8w"
                    android:src="@drawable/ic_move"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp18h"
                    android:layout_marginEnd="@dimen/dp8w"
                    android:src="@drawable/ic_move"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp8w"
                    android:layout_marginBottom="@dimen/dp18h"
                    android:src="@drawable/ic_more"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <te.app.evidence.customViews.views.CustomTextViewRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/corner_view_primary_yellow_top"
                    android:padding="@dimen/dp6h"
                    android:text="@string/edit_add_attachments"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <com.ramijemli.percentagechartview.PercentageChartView
                    android:id="@+id/view_attachments"
                    android:layout_width="@dimen/dp120w"
                    android:layout_height="@dimen/dp120h"
                    android:layout_margin="@dimen/dp8h"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:pcv_animDuration="800"
                    app:pcv_animInterpolator="accelerate"
                    app:pcv_backgroundBarColor="@color/white"
                    app:pcv_gradientColors="#033354,#0B3857,#134265,#174B72"
                    app:pcv_gradientType="linear"
                    app:pcv_mode="ring"
                    app:pcv_orientation="clockwise"
                    app:pcv_startAngle="270"
                    app:pcv_textColor="@color/colorPrimary"
                    app:pcv_textSize="@dimen/sp1" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.helper.widget.Flow
                android:id="@+id/flow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp6h"
                app:constraint_referenced_ids="home_item1,home_item2,home_item3,home_item4,home_item5"
                app:flow_horizontalGap="@dimen/dp4h"
                app:flow_horizontalStyle="spread"
                app:flow_maxElementsWrap="2"
                app:flow_verticalGap="@dimen/dp4h"
                app:flow_wrapMode="chain"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/client_data_container" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
