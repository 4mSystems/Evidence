<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="itemViewModel"
            type="grand.app.akar.pages.conversations.viewModels.ItemConversationsViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp4h">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/con_user_image"
            android:layout_width="@dimen/dp50w"
            android:layout_height="@dimen/dp50h"
            android:layout_margin="@dimen/dp4h"
            android:src="@color/overlayBackground"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <grand.app.akar.customViews.views.CustomTextViewRegular
            android:id="@+id/con_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp8w"
            android:layout_marginEnd="@dimen/dp8w"
            android:layout_marginTop="@dimen/dp3h"
            android:ellipsize="end"
            android:lines="1"
            android:text="@string/name_hint"
            android:textAlignment="viewStart"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/colordark"
            app:layout_constraintEnd_toStartOf="@+id/con_time"
            app:layout_constraintStart_toEndOf="@+id/con_user_image"
            app:layout_constraintTop_toTopOf="@+id/con_user_image" />

        <grand.app.akar.customViews.views.CustomTextViewRegular
            android:id="@+id/con_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dp8w"
            android:layout_marginEnd="@dimen/dp8w"
            android:layout_marginTop="@dimen/dp3h"
            android:ellipsize="end"
            android:lines="1"
            android:text="7 min"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/con_user_image" />

        <grand.app.akar.customViews.views.CustomTextViewRegular
            android:id="@+id/con_desc_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp8w"
            android:layout_marginEnd="@dimen/dp8w"
            android:ellipsize="end"
            android:layout_marginTop="@dimen/dp2h"
            android:lines="2"
            android:textAlignment="viewStart"
            android:text="لوريم ايبسوم هو نموذج افتراضي يوضع في التصاميم لتعرض على العميل ليتصور طريقه وضع النصوص بالتصاميم سواء كانت تصاميم مطبوعه … بروشور او فلاير على سبيل المثال … او نماذج مواقع انترنت"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/con_user_image"
            app:layout_constraintTop_toBottomOf="@+id/con_title" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/br9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="con_user_image,con_desc_text" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
