<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="itemHomeViewModel"
            type="grand.app.akar.pages.home.viewModels.ItemHomeViewModel" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp8h"
            android:onClick="@{() -> itemHomeViewModel.itemAction()}">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/img_home_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp8w"
                android:layout_marginTop="@dimen/dp13h"
                android:layout_marginBottom="@dimen/dp2h"
                app:cardCornerRadius="@dimen/dp8w"
                app:cardUseCompatPadding="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/dp100w"
                    android:layout_height="@dimen/dp100h"
                    android:scaleType="fitCenter"
                    android:src="@drawable/holo"
                    app:imageUrl="@{itemHomeViewModel.homeData.defaultImg.media}" />
            </com.google.android.material.card.MaterialCardView>


            <grand.app.akar.customViews.views.CustomTextViewMedium
                android:id="@+id/tv_home_item"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp8w"
                android:layout_marginEnd="@dimen/dp6w"
                android:ellipsize="end"
                android:hint="@{itemHomeViewModel.title}"
                android:lines="1"
                android:textAlignment="viewStart"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/colordark"
                app:layout_constraintEnd_toStartOf="@+id/tv_home_distance"
                app:layout_constraintStart_toEndOf="@+id/img_home_item"
                app:layout_constraintTop_toTopOf="@+id/img_home_item" />

            <grand.app.akar.customViews.views.CustomTextViewRegular
                android:id="@+id/tv_home_distance"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp18h"
                android:layout_marginEnd="@dimen/dp6w"
                android:background="@drawable/corner_view_primary_dark_code"
                android:gravity="center"
                android:paddingStart="@dimen/dp4w"
                android:paddingEnd="@dimen/dp4w"
                android:text="@{`# `.concat(String.valueOf(itemHomeViewModel.homeData.id))}"
                android:textColor="@color/white"
                android:textSize="@dimen/sp10"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/img_home_item" />

            <grand.app.akar.customViews.views.CustomTextViewRegular
                android:id="@+id/tv_home_desc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp8w"
                android:layout_marginTop="@dimen/dp4h"
                android:layout_marginEnd="@dimen/dp6w"
                android:text="@{itemHomeViewModel.homeData.type.equals(`0`)?itemHomeViewModel.homeData.price.concat(@string/coin).concat(@string/monthly):itemHomeViewModel.homeData.price.concat(@string/coin)}"
                android:textAlignment="viewStart"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/colordark"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/img_home_item"
                app:layout_constraintTop_toBottomOf="@id/tv_home_item" />

            <grand.app.akar.customViews.views.CustomTextViewRegular
                android:id="@+id/tv_building"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp8w"
                android:layout_marginTop="@dimen/dp4h"
                android:layout_marginEnd="@dimen/dp6w"
                android:drawableStart="@drawable/ic_villa"
                android:drawablePadding="@dimen/dp4w"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="1"
                android:text="@{itemHomeViewModel.homeData.area.concat(@string/meter)}"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/colordark"
                app:layout_constraintEnd_toStartOf="@+id/tv_beds"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/img_home_item"
                app:layout_constraintTop_toBottomOf="@id/tv_home_desc" />

            <grand.app.akar.customViews.views.CustomTextViewRegular
                android:id="@+id/tv_beds"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp2w"
                android:layout_marginTop="@dimen/dp4h"
                android:layout_marginEnd="@dimen/dp6w"
                android:drawableStart="@drawable/ic_bed_with_two_pillows_bottom_view"
                android:drawablePadding="@dimen/dp4w"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="1"
                android:text="@{itemHomeViewModel.homeData.roomNo!=null ?itemHomeViewModel.homeData.roomNo.concat(@string/room):``}"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/colordark"
                android:visibility="@{itemHomeViewModel.homeData.roomNo!=null?View.VISIBLE:View.GONE}"
                app:layout_constraintEnd_toStartOf="@+id/tv_path"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/tv_building"
                app:layout_constraintTop_toBottomOf="@id/tv_home_desc" />

            <grand.app.akar.customViews.views.CustomTextViewRegular
                android:id="@+id/tv_path"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp2w"
                android:layout_marginTop="@dimen/dp4h"
                android:layout_marginEnd="@dimen/dp6w"
                android:drawableStart="@drawable/ic_bathroom"
                android:drawablePadding="@dimen/dp4w"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="1"
                android:text="@{itemHomeViewModel.homeData.bathroomNo!=null ?itemHomeViewModel.homeData.bathroomNo.concat(@string/bath):``}"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/colordark"
                android:visibility="@{itemHomeViewModel.homeData.bathroomNo!=null?View.VISIBLE:View.GONE}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/tv_beds"
                app:layout_constraintTop_toBottomOf="@id/tv_home_desc" />

            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/br10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:barrierDirection="bottom"
                app:constraint_referenced_ids="tv_building,tv_beds,tv_path" />

            <grand.app.akar.customViews.views.CustomTextViewRegular
                android:id="@+id/tv_location"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp8w"
                android:layout_marginTop="@dimen/dp4h"
                android:layout_marginEnd="@dimen/dp6w"
                android:drawableStart="@drawable/ic_location"
                android:drawablePadding="@dimen/dp4w"
                android:ellipsize="end"
                android:lines="1"
                android:text="@{itemHomeViewModel.homeData.address}"
                android:textAlignment="viewStart"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/colordark"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/img_home_item"
                app:layout_constraintTop_toBottomOf="@id/br10" />

            <RelativeLayout
                android:id="@+id/tv_pormote"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp25h"
                android:layout_marginStart="@dimen/dp12w"
                android:layout_marginTop="@dimen/dp4h"
                android:layout_marginEnd="@dimen/dp12w"
                android:background="@drawable/corner_view_primary_dark_code"
                android:visibility="@{itemHomeViewModel.homeData.premium==1?View.GONE:View.VISIBLE}"
                app:layout_constraintEnd_toStartOf="@+id/tv_remove"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/img_home_item"
                app:layout_constraintTop_toBottomOf="@+id/tv_location">

                <grand.app.akar.customViews.views.CustomTextViewRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawableStart="@drawable/ic_special_pormote"
                    android:drawablePadding="@dimen/dp4w"
                    android:gravity="center"
                    android:text="@string/pormote_ad"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp10" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/tv_remove"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp25h"
                android:layout_marginTop="@dimen/dp4h"
                android:layout_marginEnd="@dimen/dp6w"
                android:background="@drawable/corner_view_primary_accept"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/tv_pormote"
                app:layout_constraintTop_toBottomOf="@+id/tv_location">

                <grand.app.akar.customViews.views.CustomTextViewRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawableStart="@drawable/ic_delete"
                    android:drawablePadding="@dimen/dp4w"
                    android:gravity="center"
                    android:onClick="@{()-> itemHomeViewModel.removeAd()}"
                    android:text="@string/delete_ad"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp10" />

            </RelativeLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>
