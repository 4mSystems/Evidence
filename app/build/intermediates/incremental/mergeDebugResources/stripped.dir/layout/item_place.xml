<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                  
                                                                  

    

                                           

                                                         

                 
                                
                                                                                 
           

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp4h"
        app:cardCornerRadius="@dimen/dp6h"
        app:cardElevation="4dp" android:tag="layout/item_place_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" tools:context="grand.app.moon.views.fragments.SplashFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ic_place"
                android:layout_width="@dimen/dp50w"
                android:layout_height="@dimen/dp50h"
                android:layout_margin="@dimen/dp6h"
                android:tag="binding_1"                                               
                                                                                                                                                                                                                                        
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <te.app.evidence.customViews.views.CustomTextViewRegular
                android:id="@+id/tv_map"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/corner_view_primary_dark_home"
                android:tag="binding_2"                                               
                android:text="@string/map"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/sp8_5"
                app:layout_constraintEnd_toEndOf="@id/ic_place"
                app:layout_constraintStart_toStartOf="@id/ic_place"
                app:layout_constraintTop_toBottomOf="@id/ic_place" />

            <te.app.evidence.customViews.views.CustomTextViewMedium
                android:id="@+id/user_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp4h"
                android:tag="binding_3"                        
                android:textAlignment="viewStart"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorPrimaryDark"
                app:layout_constraintBottom_toBottomOf="@id/ic_place"
                app:layout_constraintEnd_toStartOf="@id/ic_share"
                app:layout_constraintStart_toEndOf="@id/ic_place"
                app:layout_constraintTop_toTopOf="@id/ic_place" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ic_share"
                android:tag="binding_4"                                               
                app:layout_constraintTop_toTopOf="@id/ic_place"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="@dimen/dp6h"
                android:src="@drawable/ic_share_location"/>

            <te.app.evidence.customViews.views.CustomTextViewMedium
                android:id="@+id/address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp8h"
                android:tag="binding_5"                           
                android:textAlignment="viewStart"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/colordark"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_map" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
         