<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                  
                                                                  

    

                 
                            
                                                                   
           

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:tag="layout/fragment_profile_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" tools:context="grand.app.moon.views.fragments.SplashFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="0dp"
                android:layout_height="@dimen/dp150w"
                android:background="@drawable/auth_header"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <grand.app.akar.customViews.views.CustomTextViewMedium
                android:id="@+id/tv_account_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp12h"
                android:text="@string/profile_edit"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp120h"
                android:background="@color/zxing_transparent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/account_card_container"
                    app:cardElevation="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp15w"
                    android:layout_marginEnd="@dimen/dp15w"
                    app:cardCornerRadius="@dimen/dp8h"
                    app:cardUseCompatPadding="true">


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/dp80h">

                        <grand.app.akar.customViews.views.CustomTextViewMedium
                            android:id="@+id/tv_register_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dp14h"
                            android:text="@string/register_name"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="@color/colordark"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <grand.app.akar.customViews.views.CustomEditText
                            android:id="@+id/input_name"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp14w"
                            android:layout_marginTop="@dimen/dp8h"
                            android:layout_marginEnd="@dimen/dp15w"
                            android:background="@drawable/corner_view_primary_gray"
                            android:drawableStart="@drawable/ic_man"
                            android:drawablePadding="@dimen/dp8w"
                            android:hint="@string/name_hint"
                            android:inputType="text"
                            android:textAlignment="viewStart"
                            android:textColorHint="@color/medium_color"
                            app:helperTextTextColor="@color/black"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tv_register_name"
                            android:tag="binding_1"               />

                        <grand.app.akar.customViews.views.CustomTextViewMedium
                            android:id="@+id/tv_register_email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dp14h"
                            android:text="@string/email"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="@color/colordark"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/input_name" />

                        <grand.app.akar.customViews.views.CustomEditText
                            android:id="@+id/input_email"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp14w"
                            android:layout_marginTop="@dimen/dp8h"
                            android:layout_marginEnd="@dimen/dp15w"
                            android:background="@drawable/corner_view_primary_gray"
                            android:drawableStart="@drawable/ic_email"
                            android:drawablePadding="@dimen/dp8w"
                            android:hint="@string/email_hint"
                            android:inputType="text"
                            android:textAlignment="viewStart"
                            android:textColorHint="@color/medium_color"
                            app:helperTextTextColor="@color/black"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tv_register_email"
                            android:tag="binding_2"                />

                        <grand.app.akar.customViews.views.CustomTextViewMedium
                            android:id="@+id/tv_register_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dp14h"
                            android:text="@string/register_phone"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="@color/black"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/input_email" />

                        <grand.app.akar.customViews.views.CustomEditText
                            android:id="@+id/input_phone"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp14w"
                            android:layout_marginTop="@dimen/dp8h"
                            android:layout_marginEnd="@dimen/dp14w"
                            android:background="@drawable/corner_view_primary_gray"
                            android:drawableStart="@drawable/ic_auth_phone"
                            android:drawablePadding="@dimen/dp8w"
                            android:hint="@string/phone"
                            android:inputType="phone"

                            android:textAlignment="viewStart"
                            android:textColorHint="@color/medium_color"
                            app:helperTextTextColor="@color/black"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tv_register_phone"
                            android:tag="binding_3"                />

                        <grand.app.akar.customViews.views.CustomTextViewMedium
                            android:id="@+id/tv_register_password"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dp14h"
                            android:text="@string/password"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="@color/colordark"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/input_phone" />

                        <grand.app.akar.customViews.views.CustomEditText
                            android:id="@+id/input_new_password"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp14w"
                            android:layout_marginTop="@dimen/dp8h"
                            android:layout_marginEnd="@dimen/dp15w"
                            android:background="@drawable/corner_view_primary_gray"
                            android:drawableStart="@drawable/ic_auth_password"
                            android:drawablePadding="@dimen/dp8w"
                            android:hint="@string/password_hint"
                            android:inputType="textPassword"
                            android:textAlignment="viewStart"

                            android:textColorHint="@color/medium_color"
                            app:helperTextTextColor="@color/black"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tv_register_password"
                            app:passwordToggleEnabled="true"
                            android:tag="binding_4"                   />

                        <grand.app.akar.customViews.views.CustomTextViewMedium
                            android:id="@+id/tv_identity_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp14h"
                            android:layout_marginTop="@dimen/dp8h"
                            android:text="@string/change_confirm_password"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="@color/colordark"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/input_new_password" />

                        <grand.app.akar.customViews.views.CustomEditText
                            android:id="@+id/input_register_confirm_password"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp14w"
                            android:layout_marginTop="@dimen/dp8h"
                            android:layout_marginEnd="@dimen/dp14w"
                            android:background="@drawable/corner_view_primary_gray"
                            android:drawableStart="@drawable/ic_auth_password"
                            android:drawablePadding="@dimen/dp8w"
                            android:hint="@string/password_hint"
                            android:inputType="textPassword"
                            android:textAlignment="viewStart"
                            android:textColorHint="@color/medium_color"
                            app:helperTextTextColor="@color/black"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tv_identity_number" />

                        <grand.app.akar.customViews.views.CustomTextViewMedium
                            android:id="@+id/tv_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp14h"
                            android:layout_marginTop="@dimen/dp8h"
                            android:text="@string/choose_membrship"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="@color/colordark"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/input_register_confirm_password" />

                        <grand.app.akar.customViews.views.CustomTextViewMedium
                            android:id="@+id/btn_seeker"
                            android:layout_width="@dimen/dp80w"
                            android:layout_height="@dimen/dp30h"
                            android:layout_marginStart="@dimen/dp14w"
                            android:layout_marginTop="@dimen/dp8h"
                            android:background="@drawable/corner_view_primary_dark"
                            android:gravity="center"
                            android:text="@string/seeker"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textColor="@color/white"
                            app:layout_constraintEnd_toStartOf="@+id/bt_owner"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tv_type" />

                        <grand.app.akar.customViews.views.CustomTextViewMedium
                            android:id="@+id/bt_owner"
                            android:layout_width="@dimen/dp80w"
                            android:layout_height="@dimen/dp30h"
                            android:layout_marginTop="@dimen/dp8h"
                            android:background="@drawable/corner_view_light"
                            android:gravity="center"
                            android:text="@string/owner"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textColor="@color/colordark"
                            app:layout_constraintEnd_toStartOf="@+id/bt_realtor"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toEndOf="@+id/btn_seeker"
                            app:layout_constraintTop_toBottomOf="@id/tv_type" />

                        <grand.app.akar.customViews.views.CustomTextViewMedium
                            android:id="@+id/bt_realtor"
                            android:layout_width="@dimen/dp80w"
                            android:layout_height="@dimen/dp30h"
                            android:layout_marginTop="@dimen/dp8h"
                            android:layout_marginEnd="@dimen/dp14w"
                            android:background="@drawable/corner_view_light"
                            android:gravity="center"
                            android:text="@string/realtor"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textColor="@color/colordark"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toEndOf="@+id/bt_owner"
                            app:layout_constraintTop_toBottomOf="@id/tv_type" />

                        <androidx.constraintlayout.widget.Barrier
                            android:id="@+id/br11"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:barrierDirection="bottom"
                            app:constraint_referenced_ids="btn_seeker,bt_owner,bt_realtor" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/appCompatButtonNext"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp12w"
                            android:layout_marginTop="@dimen/dp20h"
                            android:layout_marginEnd="@dimen/dp12w"
                            android:layout_marginBottom="@dimen/dp20h"
                            android:background="@drawable/corner_view_primary_dark"
                            android:text="@string/edit"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="@color/white"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/br11" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>

            </RelativeLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_login_logo"
                android:layout_width="@dimen/dp100w"
                android:layout_height="@dimen/dp100h"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp40h"
                android:src="@drawable/splash"
                app:civ_border_color="@color/white"
                app:civ_border_width="2dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_account_title" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp80h"
                android:src="@mipmap/ic_edit_profile"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/img_login_logo" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
         