<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="grand.app.akar.pages.adDetails.viewModels.AdDetailsViewModel" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/dp12h">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <grand.app.akar.customViews.views.CustomTextViewMedium
                android:id="@+id/dialog_header"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp10h"
                android:text="@string/report"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/v13"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginTop="@dimen/dp14h"
                android:background="@color/colorLight"
                app:layout_constraintTop_toBottomOf="@id/dialog_header" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/selected_rc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp6w"
                android:layout_marginEnd="@dimen/dp6w"
                android:layout_marginBottom="@dimen/dp40h"
                app:adapter="@{viewModel.reportDialogReasonsAdapter}"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:layout_constraintTop_toBottomOf="@+id/v13"
                app:orientation="@{`1`}"
                app:span="@{`1`}" />

            <grand.app.akar.customViews.views.CustomEditText
                android:id="@+id/input_desc"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp80h"
                android:layout_marginStart="@dimen/dp8w"
                android:layout_marginTop="@dimen/dp15h"
                android:layout_marginEnd="@dimen/dp8w"
                android:background="@drawable/corner_view_gray_background"
                android:hint="@string/report_desc"
                android:inputType="textMultiLine"
                android:textAlignment="viewStart"
                android:textColorHint="@color/medium_color"
                app:gravity="TOP"
                app:helperTextTextColor="@color/black"
                app:hintTextAppearance="@style/TextAppearance.AppCompat.Small"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/selected_rc"
                app:text="@={viewModel.reportRequest.text}" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/option_done"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp18h"
                android:background="@color/colorPrimary"
                android:text="@string/report"
                android:onClick="@{()-> viewModel.sendReport()}"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/input_desc" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>
